<div class="container">
  <table class="table table-striped table-bordered mt-5">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement unit</th>
        <th scope="col">Unit price</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <%= render "shared/food", food: food %>
      <% end %>
    </tbody>
  </table>
</div>